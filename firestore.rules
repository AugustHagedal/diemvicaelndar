rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can only read/write their own advent calendar data
    match /users/{userId}/advent_calendar_days/{day} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Optional: Allow users to read/write their own user profile
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
